
@{
    ViewData["Title"] = "EditMix";
    Layout = "~/Views/Shared/_Blog.cshtml";
}
<script src="/assets/js/jquery-1.12.1.min.js"></script>
<div class="newsletter-cover">
    <div class="nl-bg-ol"></div>
    <div class="container">
        <div class="newsletter pt-80 pb-80">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h2 class="text-center mb-5">编辑  名称/类型名称</h2>
                    <form action="" method="post" novalidate>

                        <div class="input-group mb-5">
                            <div class="input-group-append w-25">
                                <h4 style="line-height:60px"> 名称/类型名称：</h4>
                            </div>
                            <input type="text" class="form-control" style="border-radius:20px" placeholder="名称/类型名称：">

                        </div>
                        <div class="input-group  mb-5">
                            <div class="input-group-append w-25">
                                <h4 style="line-height:60px"> 级别：</h4>
                            </div>
                            <select id="select_table" class="form-control " style="border-radius: 20px; background-color: #fff6f6; height: 60px; padding: 0px 30px; margin-right: 30px;" placeholder="名称/类型名称：">
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>

                        </div>
                        <div class="input-group  mb-5">
                            <div class="input-group-append w-25">
                                <h4 style="line-height:60px"> 上级：</h4>
                            </div>
                            <p class="checkbox-cover d-flex justify-content-center mb-5" id="Mixs">
                                <label style="padding-right: 50px;" title="其父级名称">
                                    其名称：
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </p>
                        </div>

                        <p class="checkbox-cover d-flex justify-content-center mb-5">
                            <label style="padding-right: 100px;">
                                允许被编辑
                                <input type="checkbox" checked>
                                <span class="checkmark"></span>
                            </label>
                            <label>
                                允许拥有下一级
                                <input type="checkbox">
                                <span class="checkmark"></span>
                            </label>
                        </p>
                        <div class="text-center">
                            <button class="btn btn-default">提交</button>
                        </div>
                    </form>
            </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#select_table").change(function () {
            document.getElementById('Mixs').innerHTML = '';
            var typeCodePre = $("#select_table").val();
            console.log(666, typeCodePre)
            if (typeCodePre != 0) {

                $.ajax({
                    type: "Post",
                    dataType: "josn",
                    data: { level: typeCodePre },
                    url: '/Mix/GetMixsbyLevel',
                    success: function (data) {

                    }
                });

            }
        })
    });
</script>